<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/bg_grey</item>
        <item name="colorAccent">@color/bg_grey</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>


    <style name="DialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="colorAccent">@color/bg_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResetDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/AlertDialogButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AlertDialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/button_color_selector_transparent</item>
    </style>


</resources>
